<Script>

  function fivehr(number, mg) 

{
    alert("5 Hour Energy contains " + number + mg + " of caffeine. This equals " + number/100 + "cups of coffee.");
}

  function coke(number, mg) 

{
    alert("Coca-cola contains (12oz) " + number + mg + " of caffeine. This equals " + number/100 + "cups of coffee.");
}
  function redbull(number, mg) 

{
    alert("Red bull contains (8.5oz) " + number + mg + " of caffeine. This equals " + number/100 + "cups of coffee.");
}
  function monster(number, mg) 

{
    alert("Monster Energy contains (16oz) " + number + mg + " of caffeine. This equals " + number/100 + "cups of coffee.");
}
  
